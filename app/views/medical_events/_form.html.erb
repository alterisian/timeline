<%= form_for @medical_event, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :summary, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :summary, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :occurred_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :occurred_at, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  medical_events_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
